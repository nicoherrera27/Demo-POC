---
// importaciones
import '../styles/global.css';
import MovieSearch from '../components/MovieSearch.vue';
import MoviesList from '../components/MoviesList.svelte';
import MovieChart from '../components/MovieChart.svelte';
import Watchlist from '../components/Watchlist.jsx';
import MovieStats from '../components/MovieStats.jsx';

// SSR fetch inicial directo a TMDB (NO /api/tmdb relativo)
const query = 'inception';
const res = await fetch(
  `https://api.themoviedb.org/3/search/movie?${new URLSearchParams({
    api_key: import.meta.env.TMDB_API_KEY,
    query,
    page: '1',
  })}`
);
const json = await res.json();
const movies = json.results || [];
---

<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>Movie Dashboard PoC</title>
  </head>
  <body>
    <div class="container">
      <h1 class="text-3xl font-bold mb-4">Movie Dashboard PoC</h1>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <div class="col-span-2">
          <div class="card mb-4">
            <MovieSearch client:load />
          </div>

          <div class="card mb-4">
            <h2 class="font-semibold mb-2">Resultados</h2>
            <MoviesList client:load {movies} />
          </div>

          <div class="card mb-4">
            <h2 class="font-semibold mb-2">Evolución (ratings por año)</h2>
            <MovieChart client:load {movies} />
          </div>
        </div>

        <div>
          <div class="card mb-4">
            <Watchlist client:load />
          </div>

          <div class="card mb-4">
            <MovieStats client:load {movies} />
          </div>
        </div>
      </div>
    </div>
  </body>
</html>

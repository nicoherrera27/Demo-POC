---
// src/pages/watchlist.astro
import Layout from '../layouts/Layout.astro';
import WatchlistSvelte from '../components/WatchlistSvelte.svelte';
---

<Layout title="Mi Lista - Woobly Seat">
  <!-- Hero Section -->
  <section
    class="bg-gradient-to-r from-green-900 via-teal-900 to-blue-900 rounded-lg p-8 mb-8 text-center"
  >
    <h1 class="text-4xl md:text-6xl font-bold text-white mb-4">
      Mi Lista
    </h1>
    <p class="text-xl text-gray-200 mb-6">
      Gestiona tus peliculas y series pendientes de ver
    </p>
  </section>

  <!-- Watchlist Component -->
  <WatchlistSvelte client:load />

  <!-- Quick Actions Section -->
  <section class="mt-8 bg-gray-800 p-6 rounded-lg shadow-lg">
    <h2 class="text-2xl font-bold mb-6 text-primary-400">
     Acciones Rapidas
    </h2>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      <div class="bg-gray-700 p-4 rounded-lg text-center">
        <div class="text-3xl mb-3"></div>
        <h3 class="text-lg font-semibold text-white mb-2">Buscar Contenido</h3>
        <p class="text-gray-300 text-sm mb-4">
          Descubre nuevas peliculas y series para agregar
        </p>
        <a
          href="/"
          class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg transition-colors inline-block"
        >
          Ir a Busqueda
        </a>
      </div>

      <div class="bg-gray-700 p-4 rounded-lg text-center">
        <div class="text-3xl mb-3"></div>
        <h3 class="text-lg font-semibold text-white mb-2">Mejor Valorado</h3>
        <p class="text-gray-300 text-sm mb-4">
          Explora el contenido mejor valorado
        </p>
        <a
          href="/#top-rated"
          class="bg-purple-600 hover:bg-purple-700 text-white px-4 py-2 rounded-lg transition-colors inline-block"
        >
          Ver Top Rated
        </a>
      </div>

      <div class="bg-gray-700 p-4 rounded-lg text-center">
        <div class="text-3xl mb-3"></div>
        <h3 class="text-lg font-semibold text-white mb-2">Estadisticas</h3>
        <p class="text-gray-300 text-sm mb-4">
          Analiza tus patrones de visualizacion
        </p>
        <a
          href="/"
          class="bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded-lg transition-colors"
        >
          Ver Stats
        </a>
      </div>
    </div>
  </section>

  <!-- Tips Section -->
  <section
    class="mt-8 bg-gradient-to-r from-gray-800 to-gray-900 p-6 rounded-lg shadow-lg"
  >
    <h2 class="text-2xl font-bold mb-6 text-center text-white">
      Tips para Usar tu Lista
    </h2>

      <div class="bg-gray-700 p-4 rounded-lg">
        <h3 class="text-lg font-semibold text-blue-400 mb-3">
          Organizacion
        </h3>
        <ul class="text-sm text-gray-300 space-y-2">
          <li>• Puedes filtrar por <strong>tipo</strong> (peliculas vs series)</li>
          <li>• Puedes ordenar por <strong>prioridad</strong> para saber que ver antes</li>
          <li>• Marca como <strong>vista</strong> cuando termines para no confundirte</li>
        </ul>
      </div>
    </div>
  </section>
</Layout>

<script>
  // Cargar el store de watchlist para esta página
  import('../lib/watchlistStore')
    .then(({ watchlistStore, WatchlistEvents }) => {
      console.log('Watchlist page: Store loaded');

      // Configurar eventos globales
      WatchlistEvents.setupGlobalListeners();

      // Hacer disponible globalmente para debugging
      window.watchlistStore = watchlistStore;

      console.log(
        'Watchlist page ready with',
        watchlistStore.getWatchlist().length,
        'items'
      );
    })
    .catch((error) => {
      console.error('Error loading watchlist store:', error);
    });
</script>

<style>
  /* Animaciones suaves */
  section {
    animation: fadeInUp 0.6s ease-out;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
